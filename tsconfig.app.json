{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "./env.d.ts",
    "project/**/env.d.ts",
    "project/**/src/**/*",
    "project/**/src/**/*.vue",
    "common/env.d.ts",
    "common/**/*",
    "common/**/*.vue"
  ],
  "exclude": ["project/**/src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "project/base/src/*",
        "project/main-admin/src/*",
        "project/statistics-admin/src/*",
        "project/audit-admin/src/*"
      ]
    }
  }
}
